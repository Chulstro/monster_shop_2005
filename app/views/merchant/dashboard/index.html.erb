<%= @merchant.name %>
<%= @merchant.address %>
<%= @merchant.city %>
<%= @merchant.state %>
<%= @merchant.zip %>

<%= link_to "My Items", "/merchant/items" %>

<% @merchant.orders.each do |order| %>
  <%= link_to "Order ID##{order.id}", "/merchant/orders/#{order.id}"%>
  Order placed at: <%= order.created_at %>
  Total number of items: <%= order.total_quantity %>
  Grand Total: <%= order.grandtotal %>
<% end %>
